                },
                {
                    "start": 820,
                    "end": 821,
                    "text": "7",
                    "ref_id": "BIBREF7"
                },
                {
                    "start": 953,
                    "end": 954,
                    "text": "8",
                    "ref_id": "BIBREF8"
                },
                {
                    "start": 1019,
