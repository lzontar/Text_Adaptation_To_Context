    "metadata": {
        "title": "A proposed mechanism for the possible therapeutic potential of Metformin in COVID-19",
        "authors": [
            {
                "first": "Zohreh",
                "middle": [],
                "last": "Esam",
                "suffix": "",
                "affiliation": {
                    "laboratory": "",
