    "metadata": {
        "title": "Protections against the Risk of Airborne SARS-CoV-2 Infection",
        "authors": [
            {
                "first": "Clement",
                "middle": [
                    "J"
                ],
                "last": "Mcdonald",
                "suffix": "",
