    "metadata": {
        "title": "Title: SGLT-2 inhibitors for COVID-19-A miracle waiting to happen or just another beat around the bush?",
        "authors": [
            {
                "first": "Subhankar",
                "middle": [],
                "last": "Chatterjee",
                "suffix": "",
                "affiliation": {
                    "laboratory": "",
                    "institution": "Rajendra Institute of Medical Sciences",
                    "location": {
                        "settlement": "Ranchi, Ranchi",
                        "region": "Jharkhand, Jharkhand",
                        "country": "India., India"
                    }
                },
